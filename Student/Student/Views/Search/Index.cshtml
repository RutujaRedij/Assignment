@model IEnumerable<Student.Models.Course>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @using (Html.BeginForm("Index", "Search", FormMethod.Get))
    {
        <b>Search By:</b><br />
        @Html.RadioButton("searchBy", "CourseName", true) <text>CourseName</text>
        @Html.RadioButton("searchBy", "NumderofModules") <text>NumderofModules</text>
        @Html.TextBox("search") <input type="submit" value="search" />
    }
</p>

<table border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.NumderofModules)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>


    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4">
                No records match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NumderofModules)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>


            </tr>
        }
    }

</table>
